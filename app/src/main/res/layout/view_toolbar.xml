<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/toolbar_normal_height"
    app:contentInsetStart="0dp" app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:background="@color/colorPrimary"
    android:elevation="8dp"
    app:layout_constraintEnd_toEndOf="parent" tools:showIn="@layout/activity_main">

  <androidx.appcompat.widget.AppCompatImageButton
      android:id="@+id/toolbar_action_btn"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:padding="16dp"
      style="@style/ToolbarButton"
      android:contentDescription="@string/close"
      app:srcCompat="@drawable/ic_close_white"/>

  <!--<androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/toolbar_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      tools:text=""
      style="@style/ToolbarTitle"/>-->

  <androidx.appcompat.widget.AppCompatImageView
      android:id="@+id/toolbar_title"
      android:layout_width="130dp"
      android:layout_height="wrap_content"
      style="@style/ToolbarImg"
      app:srcCompat="@drawable/img_logo_pokedex" />

</androidx.appcompat.widget.Toolbar>