<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
  <data>

    <variable name="pokemonType"
        type="coa.elvis.pokedex.model.EnumPokemonType"/>
  </data>
  <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/tvTypeA"
      android:layout_width="80dp"
      android:layout_height="wrap_content"
      android:padding="8dp"
      android:shadowColor="#000000"
      android:shadowDx="1.5"
      android:shadowDy="1.3"
      android:shadowRadius="1.6"
      android:background="@drawable/rounded_transparent_rect"
      android:text="@{pokemonType.toString()}"
      app:backgroundType="@{pokemonType.background}"
      android:textAlignment="center"
      android:textColor="@color/dark_white"
      android:textSize="12sp" />
</layout>