<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:textColorHint">@color/colorPrimary</item>
  </style>

  <style name="SplashTheme" parent="AppTheme">
    <item name="windowNoTitle">true</item>
    <item name="windowActionBar">false</item>
    <item name="android:windowFullscreen">true</item>
  </style>

  <style name="RootButton">
    <item name="android:foreground">?attr/selectableItemBackground</item>
    <item name="android:clickable">true</item>
    <item name="android:focusable">true</item>
  </style>

  <style name="ToolbarButton" parent="RootButton">
    <item name="android:background">@android:color/transparent</item>
  </style>

  <style name="AppBaseButton" parent="RootButton">
    <item name="android:layout_width">@dimen/match_parent</item>
    <item name="android:layout_height">@dimen/wrap_content</item>
    <item name="android:padding">12dp</item>
    <item name="android:fontFamily">sans-serif</item>
    <item name="android:textSize">16sp</item>
    <item name="android:layout_marginStart">16dp</item>
    <item name="android:layout_marginEnd">16dp</item>
  </style>

  <style name="ToolbarTitle">
    <item name="android:textSize">18sp</item>
    <item name="android:fontFamily">sans-serif-medium</item>
    <item name="android:textColor">@android:color/white</item>
    <item name="android:layout_gravity">center|top</item>
  </style>

  <style name="ToolbarImg">
    <item name="android:layout_gravity">center|top</item>
  </style>


</resources>
